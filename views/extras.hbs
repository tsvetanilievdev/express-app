<form class="extras-form" action="" method="post">
    <h3>Create an Extra</h3>
    <label>Name: <input type="text" name="name" /></label>
    <label>Price: <input type="number" name="price" /></label>
    <input type="submit" value="Create Extra" />
</form>
<section class="extra">
    {{#if extras}}
        <h3>Available Extras</h3>
        <ul>
            {{#each extras}}
                <li id="{{_id}}">
                    <label><span>{{name}}:</span>{{price}}$</label>
                    {{!-- <input type="checkbox" name="{{_id}}" id="" /> --}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>There is no extras yet!</p>
    {{/if}}
</section>