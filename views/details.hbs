{{#with shoes}}
    <section class="details-card">
        <img src="{{image}}" alt="" />
        <div class="content">
            <h3>{{brand}} {{model}}</h3>
            <p><span>Price:</span> {{price}}$</p>
            <p><span>Size:</span> {{size}}</p>
            <p class="desc"><span>Description:</span>
                {{description}}
            </p>
            <div class="controls">
                <a href="/edit/{{id}}">Edit</a>
                <a href="/delete/{{id}}">Delete</a>
            </div>
        </div>
    </section>
{{/with}}